<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".MainActivity"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_img"
            tools:context=".MainActivity"
            tools:ignore="RedundantNamespace">

            <TextView
                android:layout_width="match_parent"
                android:layout_height= "20dp"
                android:background="@color/spinbox_yellow"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tryUsd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/spinbox_yellow"
                android:text=""
                android:textColor="@color/spinbox_brown"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingStart="10dp"
                android:layout_marginTop="10dp"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/tryEur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/spinbox_yellow"
                android:text=""
                android:textColor="@color/spinbox_brown"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/navigationDrawerImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/tryUsd"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/baseline_menu_24"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/spinboxMusicLogoImage"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tryUsd"
                app:srcCompat="@drawable/spinbox_music_logo_yellow"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/userImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tryUsd"
                app:srcCompat="@drawable/baseline_person_24"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/cartImageView"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="18.5dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintEnd_toStartOf="@id/userImageView"            app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tryUsd"
                app:srcCompat="@drawable/baseline_shopping_cart_24"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/albumsAlbumText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALBÃœMLER"
                android:textColor="@color/spinbox_yellow"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spinboxMusicLogoImage" />

            <ImageView
                android:id="@+id/albumArctic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumsAlbumText"
                app:layout_constraintHorizontal_bias="0.08"
                app:srcCompat="@drawable/arctic_monkeys_whatever"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumBeethoven"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumsAlbumText"
                app:layout_constraintHorizontal_bias="0.5"
                app:srcCompat="@drawable/beethoven_symphony_no_9"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumDrinkingSongs"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumsAlbumText"
                app:layout_constraintHorizontal_bias="0.92"
                app:srcCompat="@drawable/drinking_songs"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumErikSatie"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumArctic"
                app:layout_constraintHorizontal_bias="0.08"
                app:srcCompat="@drawable/erik_satie_and_friends"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumHatfulOfHollow"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumBeethoven"
                app:layout_constraintHorizontal_bias="0.5"
                app:srcCompat="@drawable/hatful_of_hollow"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumJarOfFlies"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumDrinkingSongs"
                app:layout_constraintHorizontal_bias="0.92"
                app:srcCompat="@drawable/jar_of_flies"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumListen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumErikSatie"
                app:layout_constraintHorizontal_bias="0.08"
                app:srcCompat="@drawable/listen"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumMTV"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumHatfulOfHollow"
                app:layout_constraintHorizontal_bias="0.5"
                app:srcCompat="@drawable/mtv_unplugged"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumNasilNeZaman"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumJarOfFlies"
                app:layout_constraintHorizontal_bias="0.92"
                app:srcCompat="@drawable/nasil_ne_zaman"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumOKComputer"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumListen"
                app:layout_constraintHorizontal_bias="0.08"
                app:srcCompat="@drawable/ok_computer"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumRAM"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumMTV"
                app:layout_constraintHorizontal_bias="0.5"
                app:srcCompat="@drawable/random_access_memories"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumRealGone"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumNasilNeZaman"
                app:layout_constraintHorizontal_bias="0.92"
                app:srcCompat="@drawable/real_gone"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumRubberSoul"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumOKComputer"
                app:layout_constraintHorizontal_bias="0.08"
                app:srcCompat="@drawable/rubber_soul"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumSuperunknown"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumRAM"
                app:layout_constraintHorizontal_bias="0.5"
                app:srcCompat="@drawable/superunknown"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumTen"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumRealGone"
                app:layout_constraintHorizontal_bias="0.92"
                app:srcCompat="@drawable/ten"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumTheBends"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumRubberSoul"
                app:layout_constraintHorizontal_bias="0.08"
                app:srcCompat="@drawable/the_bends"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumMidlake"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumSuperunknown"
                app:layout_constraintHorizontal_bias="0.5"
                app:srcCompat="@drawable/the_courage_of_others"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/albumTrue"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/albumTen"
                app:layout_constraintHorizontal_bias="0.92"
                app:srcCompat="@drawable/arctic_monkeys_whatever_copy"
                tools:layout_editor_absoluteY="37dp"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:background="@color/spinbox_yellow"
        app:itemTextColor="@color/spinbox_brown"
        app:menu="@menu/nav_menu"
        tools:ignore="MissingConstraints"
        android:layout_marginEnd="120dp"
        android:paddingTop="120dp" />

</androidx.drawerlayout.widget.DrawerLayout>
