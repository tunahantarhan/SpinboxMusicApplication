<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/lp_icon"
        android:label="SpinBox Music"
        android:roundIcon="@drawable/lp_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpinboxMusicApplication"
        tools:targetApi="31">

        <activity android:name=".SplashScreenActivity"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" /> <!-- Launcher olarak atama -->
            </intent-filter>
        </activity>
        <activity
            android:name=".WelcomeScreenActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".AdMainActivity"
            android:exported="false" />
        <activity
            android:name=".SignInActivity"
            android:exported="false" />
        <activity
            android:name=".SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".AlbumsActivity"
            android:exported="false" />
        <activity android:name=".ProfileActivity"
            android:exported="false" />
        <activity android:name=".AdProfileActivity"
            android:exported="false" />
        <activity android:name=".ChangeMailActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />
        <activity android:name=".ChangePasswordActivity"
            android:exported="false"
            tools:ignore="Instantiatable" />
    </application>

</manifest>